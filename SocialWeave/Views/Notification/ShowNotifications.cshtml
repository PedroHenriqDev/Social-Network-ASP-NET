@using SocialWeave.Models.ConcreteClasses;
@using SocialWeave.Extensions;

@model IEnumerable<Notification>

<style>

    body {
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .search-button:hover {
        background-color: #e0e0e0;
    }

    .custom-border {
        width: 100%;
        height: 2px;
        background: linear-gradient(to right, #000080, #4B0082);
        margin: 40px 0;
    }

    .info-text {
        background: linear-gradient(to right, #000080, #4B0082);
        -webkit-background-clip: text;
        color: transparent;
        padding: 10px 20px;
        margin-bottom: 20px;
    }

    .text-start {
        text-align: start;
    }

    .text-center {
        text-align: center;
    }

    .text-end {
        text-align: end;
    }

    .post {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 80px;
    }

</style>

<div class="info-text text-center"><h3>Notifications</h3><i class="bi bi-bell"></i></div>
<div class="custom-border"></div>
@if (Model != null && Model.Count() != 0)
{
    @foreach (var notification in Model)
    {
        <div class="text-center">
            <p class="text-center">@notification.Date.Duration()</p>
            @if (notification.User.PictureProfile == null)
            {
                <div class="text-xxl-start">
                    <form asp-action="UserPageWithParams" asp-controller="User" method="get">
                        <input type="hidden" name="name" value="@notification.InvolvedUser.Name" />
                        <button type="submit" class="btn text-light"><i class="bi bi-person-circle me-2"></i>@notification.Content</button>
                    </form>
                </div>
            }
            else
            {
                <form asp-action="UserPageWithParams" asp-controller="User" method="get">
                    <input type="hidden" name="name" value="@notification.InvolvedUser.Name" />
                    <button class="btn text-light"><img src="data:image/png;base64,@(Convert.ToBase64String(notification.InvolvedUser.PictureProfile))" class="img-fluid rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" /> @notification.Content</button>
                </form>
            }
        </div>
        <hr />
    }
}
else
{
    <h5 class="text-center">No have notifications!</h5>
}
